<h1>KarmaVille's Most Famous</h1>
<table class="table table-bordered table-striped">
  <tr>
    <th>Karma</th>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
  </tr>
  <% @users.each do |user| %>
    <%= render 'user_row', :user => user %>
  <% end %>
  <ul class="pager">
  <% if @page_id && @page_id > 1 %>
    <li><%= link_to('Previous', user_path(@page_id - 1)) %></li>
    <li><%= link_to('Next', user_path(@page_id + 1)) %></li>
  <% else %>
    <li><%= link_to('Next', user_path(2)) %></li>
  <% end %>
  </ul>
</table>






